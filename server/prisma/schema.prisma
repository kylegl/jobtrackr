generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
}

model employee {
  id         String            @id @default(cuid())
  name       String
  phone      String?
  email      String?
  isEmployed Boolean
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
  workorders workOrder[]
  position   employeePosition? @relation(fields: [positionId], references: [id])
  positionId String?
}

model employeePosition {
  id        String     @id @default(cuid())
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  employee  employee[]
}

model company {
  id        String      @id @default(cuid())
  name      String
  phone     String?
  email     String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  contacts  contact[]
  jobs      job[]
  bids      bid[]
  workOrder workOrder[]
}

model contact {
  id         String      @id @default(cuid())
  name       String
  phone      String?
  email      String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  companyId  String?
  company    company?    @relation(fields: [companyId], references: [id])
  employeeId String?
  jobs       job[]
  bids       bid[]
  workorders workOrder[]
}

model property {
  id        String   @id @default(cuid())
  address   String
  gateCode  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  jobs      job[]
  bids      bid[]
}

model job {
  id               String      @id @default(cuid())
  name             String
  number           Int?
  isPrevailingWage Boolean
  isHourly         Boolean
  contractTotal    Int?
  invoicedTotal    Int?
  paidTotal        Int?
  hours            Int?
  startAt          DateTime?
  dueAt            DateTime?
  closedAt         DateTime?
  notes            String?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  type             jobType?    @relation(fields: [typeId], references: [id])
  typeId           String?
  status           jobStatus?  @relation(fields: [statusId], references: [id])
  statusId         String?
  company          company?    @relation(fields: [companyId], references: [id])
  companyId        String?
  contacts         contact[]
  property         property?   @relation(fields: [propertyId], references: [id])
  propertyId       String?
  bids             bid[]
  workOrders       workOrder[]
}

model jobStatus {
  id   String @id @default(cuid())
  name String
  jobs job[]
}

model jobType {
  id   String @id @default(cuid())
  name String
  jobs job[]
  bids bid[]
}

model bid {
  id               String     @id @default(cuid())
  name             String?
  number           Int?
  isPrevailingWage Boolean?
  isHourly         Boolean
  hours            Int?
  total            Int?
  sentAt           DateTime?
  dueAt            DateTime?
  closedAt         DateTime?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  property         property?  @relation(fields: [propertyId], references: [id])
  propertyId       String?
  type             jobType?   @relation(fields: [typeId], references: [id])
  typeId           String?
  status           bidStatus? @relation(fields: [statusId], references: [id])
  statusId         String?
  companies        company[]
  contacts         contact[]
  jobs             job[]
}

model bidStatus {
  id   String @id @default(cuid())
  name String
  bids bid[]
}

model task {
  id          String      @id @default(cuid())
  description String?
  materials   String?
  hours       Int?
  number      Int
  startAt     DateTime?
  dueAt       DateTime?
  closedAt    DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  status      taskStatus? @relation(fields: [statusId], references: [id])
  statusId    String?
  workOrder   workOrder?  @relation(fields: [workOrderId], references: [id])
  workOrderId String?
}

model taskStatus {
  id    String @id @default(cuid())
  name  String
  tasks task[]
}

model workOrder {
  id          String           @id @default(cuid())
  number      Int
  description String?
  isHourly    Boolean
  hours       Int?
  startAt     DateTime?
  dueAt       DateTime?
  closedAt    DateTime?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  job         job?             @relation(fields: [jobId], references: [id])
  jobId       String?
  company     company?         @relation(fields: [companyId], references: [id])
  companyId   String?
  status      workOrderStatus? @relation(fields: [statusId], references: [id])
  statusId    String?
  contacts    contact[]
  employees   employee[]
  tasks       task[]
}

model workOrderStatus {
  id         String      @id @default(cuid())
  name       String
  workOrders workOrder[]
}
